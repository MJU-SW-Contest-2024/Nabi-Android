<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Nabi" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/white</item>

        <!-- Splash Screen -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">500</item>

        <!-- Activity 전환 Animation 비활성화 -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.Nabi" parent="Base.Theme.Nabi" />

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- Dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@drawable/shape_non_day_date_picker_bg</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- NumberPicker theme -->
    <style name="NumberPickerTheme" parent="@android:style/Widget.Material.NumberPicker">
        <item name="fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- Define a custom style for the buttons -->
    <style name="DialogButtonStyle">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="dialog_fullscreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>