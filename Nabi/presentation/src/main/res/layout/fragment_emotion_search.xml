<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <Toolbar
            android:id="@+id/tb_emotion_diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/transparent"
                android:contentDescription="@null"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="지루한 감정의 일기들"
                android:textColor="@color/black" />
        </Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_emotion_diary_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/tb_emotion_diary"
            app:layout_constraintBottom_toTopOf="@id/iv_emotion_anger"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="20dp"
            tools:listitem="@layout/item_search_diary"/>
        
        <ImageView
            android:id="@+id/iv_emotion_anger"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_emotion_happiness"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/img_anger_gray"/>

        <ImageView
            android:id="@+id/iv_emotion_happiness"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="@id/iv_emotion_anger"
            app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
            app:layout_constraintStart_toEndOf="@id/iv_emotion_anger"
            app:layout_constraintEnd_toStartOf="@id/iv_emotion_boredom"
            android:src="@drawable/img_happiness_gray"/>

        <ImageView
            android:id="@+id/iv_emotion_boredom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="@id/iv_emotion_anger"
            app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
            app:layout_constraintStart_toEndOf="@id/iv_emotion_happiness"
            app:layout_constraintEnd_toStartOf="@id/iv_emotion_sadness"
            android:src="@drawable/img_boredom_gray"/>

        <ImageView
            android:id="@+id/iv_emotion_sadness"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="@id/iv_emotion_anger"
            app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
            app:layout_constraintStart_toEndOf="@id/iv_emotion_boredom"
            app:layout_constraintEnd_toStartOf="@id/iv_emotion_anxiety"
            android:src="@drawable/img_sadness_gray"/>

        <ImageView
            android:id="@+id/iv_emotion_anxiety"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="@id/iv_emotion_anger"
            app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
            app:layout_constraintStart_toEndOf="@id/iv_emotion_sadness"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/img_anxiety_gray"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>