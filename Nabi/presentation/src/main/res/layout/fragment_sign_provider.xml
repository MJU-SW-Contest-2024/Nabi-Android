<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:context=".views.sign.SignActivity">

        <ImageView
            android:id="@+id/iv_signin_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_signin_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_naver"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:alpha="0.3"
            android:background="#00000000"
            android:contentDescription="@string/sign_provider_btn_kakao_login"
            android:scaleType="centerInside"
            android:src="@drawable/img_naver_btn"
            app:layout_constraintVertical_bias="0.7"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_kakao"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_kakao"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="#00000000"
            android:contentDescription="@string/sign_provider_btn_kakao_login"
            android:scaleType="centerInside"
            android:src="@drawable/img_kakao_btn"

            app:layout_constraintBottom_toBottomOf="@id/btn_naver"
            app:layout_constraintEnd_toStartOf="@id/btn_google"
            app:layout_constraintStart_toEndOf="@id/btn_naver"
            app:layout_constraintTop_toTopOf="@id/btn_naver" />

        <ImageButton
            android:id="@+id/btn_google"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:alpha="0.3"
            android:background="#00000000"
            android:contentDescription="@string/sign_provider_btn_kakao_login"
            android:scaleType="centerInside"
            android:src="@drawable/img_google_btn"

            app:layout_constraintBottom_toBottomOf="@id/btn_naver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_kakao"
            app:layout_constraintTop_toTopOf="@id/btn_naver" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_recent_provider"
            app:layout_constraintEnd_toStartOf="@id/tv_recent_provider"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="@id/tv_recent_provider" />

        <TextView
            android:id="@+id/tv_recent_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="32dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/text_recent_login"
            android:textColor="@color/white"

            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/divider_2"
            app:layout_constraintStart_toEndOf="@id/divider_1"
            app:layout_constraintTop_toBottomOf="@id/btn_kakao" />

        <View
            android:id="@+id/divider_2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"

            android:layout_marginStart="4dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_recent_provider"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_recent_provider"
            app:layout_constraintTop_toTopOf="@id/tv_recent_provider" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_recent_naver"
            style="@style/button_bold_16px"
            android:layout_width="0dp"

            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_radius_5"
            android:backgroundTint="#03CA5B"

            android:text="네이버로 로그인"
            android:textColor="@color/white"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_provider" />

        <ImageView
            android:id="@+id/iv_recent_naver"
            android:layout_width="18dp"
            android:layout_height="19dp"

            android:layout_marginStart="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_provider_naver"
            android:translationZ="10dp"

            app:layout_constraintBottom_toBottomOf="@id/btn_recent_naver"
            app:layout_constraintStart_toStartOf="@id/btn_recent_naver"

            app:layout_constraintTop_toTopOf="@id/btn_recent_naver"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_recent_naver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btn_recent_naver, iv_recent_naver" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_recent_google"
            style="@style/button_bold_16px"
            android:layout_width="0dp"

            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_radius_5_with_stroke"
            android:text="구글로 로그인"

            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_provider" />

        <ImageView
            android:id="@+id/iv_recent_google"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_marginStart="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_provider_google"
            android:translationZ="10dp"

            app:layout_constraintBottom_toBottomOf="@id/btn_recent_google"
            app:layout_constraintStart_toStartOf="@id/btn_recent_google"

            app:layout_constraintTop_toTopOf="@id/btn_recent_google" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_recent_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btn_recent_google, iv_recent_google" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_recent_kakao"
            style="@style/button_bold_16px"
            android:layout_width="0dp"

            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_radius_5_with_stroke"
            android:backgroundTint="#FAE100"

            android:text="카카오로 로그인"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_provider" />

        <ImageView
            android:id="@+id/iv_recent_kakao"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:layout_marginStart="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_provider_kakao"
            android:translationZ="10dp"

            app:layout_constraintBottom_toBottomOf="@id/btn_recent_kakao"
            app:layout_constraintStart_toStartOf="@id/btn_recent_kakao"

            app:layout_constraintTop_toTopOf="@id/btn_recent_kakao" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_recent_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btn_recent_kakao, iv_recent_kakao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_regular"
            android:text="@string/text_team_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_recent_kakao"
            app:layout_constraintVertical_bias="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>