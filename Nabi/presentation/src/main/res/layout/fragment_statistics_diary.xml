<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".views.MainActivity">

        <Toolbar
            android:id="@+id/tb_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/transparent"
                android:contentDescription="@null"
                android:src="@drawable/ic_arrow" />

            <TextView
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="감정 통계"
                android:textColor="@color/black" />
        </Toolbar>

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_statistics"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_radius_20"
            android:backgroundTint="@color/gray3"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"
            android:paddingVertical="4dp"
            tools:text="2024. 06. 28"
            android:textColor="@color/black"
            style="@style/body1"
            app:drawableEndCompat="@drawable/ic_down"
            android:drawablePadding="8dp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="36dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toEndOf="@id/tv_start_date"
            app:layout_constraintEnd_toStartOf="@id/tv_end_date"
            app:layout_constraintTop_toTopOf="@id/tv_start_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_start_date"
            android:background="@color/gray2" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_start_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_start_date"
            android:background="@drawable/shape_radius_20"
            android:backgroundTint="@color/gray3"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"
            android:paddingVertical="4dp"
            tools:text="2024. 06. 28"
            android:textColor="@color/black"
            style="@style/body1"
            app:drawableEndCompat="@drawable/ic_down"
            android:drawablePadding="8dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="w, 1.1257861635220126:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_start_date"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="20dp">

                <com.nabi.nabi.custom.CustomChartView
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/iv_emotion_anger" />

                <ImageView
                    android:id="@+id/iv_emotion_anger"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/barChart"
                    app:layout_constraintBottom_toTopOf="@id/tv_emotion_anger_value"
                    app:layout_constraintEnd_toStartOf="@id/iv_emotion_happiness"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintDimensionRatio="5:4"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="@null"
                    android:src="@drawable/img_anger" />

                <ImageView
                    android:id="@+id/iv_emotion_happiness"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/iv_emotion_anger"
                    app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
                    app:layout_constraintEnd_toStartOf="@id/iv_emotion_boredom"
                    app:layout_constraintDimensionRatio="5:4"
                    android:contentDescription="@null"
                    android:src="@drawable/img_happiness" />

                <ImageView
                    android:id="@+id/iv_emotion_boredom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/iv_emotion_happiness"
                    app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
                    app:layout_constraintEnd_toStartOf="@id/iv_emotion_sadness"
                    app:layout_constraintDimensionRatio="5:4"
                    android:contentDescription="@null"
                    android:src="@drawable/img_boredom" />

                <ImageView
                    android:id="@+id/iv_emotion_sadness"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/iv_emotion_boredom"
                    app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
                    app:layout_constraintEnd_toStartOf="@id/iv_emotion_anxiety"
                    app:layout_constraintDimensionRatio="5:4"
                    android:contentDescription="@null"
                    android:src="@drawable/img_sadness" />

                <ImageView
                    android:id="@+id/iv_emotion_anxiety"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/iv_emotion_sadness"
                    app:layout_constraintBottom_toBottomOf="@id/iv_emotion_anger"
                    app:layout_constraintEnd_toEndOf="@id/barChart"
                    app:layout_constraintDimensionRatio="5:4"
                    android:contentDescription="@null"
                    android:src="@drawable/img_anxiety" />

                <TextView
                    android:id="@+id/tv_emotion_anger_value"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    app:layout_constraintStart_toStartOf="@id/barChart"
                    app:layout_constraintEnd_toStartOf="@id/tv_emotion_happiness_value"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    tools:text="2"
                    style="@style/search_keyword_regular_16px"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tv_emotion_happiness_value"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    app:layout_constraintStart_toEndOf="@id/tv_emotion_anger_value"
                    app:layout_constraintEnd_toStartOf="@id/tv_emotion_boredom_value"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    tools:text="6"
                    style="@style/search_keyword_regular_16px"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tv_emotion_boredom_value"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    app:layout_constraintStart_toEndOf="@id/tv_emotion_happiness_value"
                    app:layout_constraintEnd_toStartOf="@id/tv_emotion_sadness_value"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    tools:text="5"
                    style="@style/search_keyword_regular_16px"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tv_emotion_sadness_value"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    app:layout_constraintStart_toEndOf="@id/tv_emotion_boredom_value"
                    app:layout_constraintEnd_toStartOf="@id/tv_emotion_anxiety_value"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    tools:text="2"
                    style="@style/search_keyword_regular_16px"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tv_emotion_anxiety_value"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    app:layout_constraintStart_toEndOf="@id/tv_emotion_sadness_value"
                    app:layout_constraintEnd_toEndOf="@id/barChart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    tools:text="4"
                    style="@style/search_keyword_regular_16px"
                    android:textColor="#000000"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
