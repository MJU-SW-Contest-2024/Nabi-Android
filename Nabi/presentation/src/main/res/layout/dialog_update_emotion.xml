<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="277dp"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingBottom="16dp"
    android:background="@drawable/shape_radius_10"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"

        android:gravity="center"
        android:text="감정 수정하기"
        style="@style/custom_dialog_title_semi_bold_14px"
        android:textColor="#000000"/>


    <ToggleButton
        android:id="@+id/tb_anger"
        android:layout_width="40dp"
        android:layout_height="0dp"

        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tb_happiness"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title"
        android:layout_marginTop="34dp"
        
        android:text=""
        android:textOn=""
        android:textOff=""
        
        android:background="@drawable/selector_anger_toggle"/>

    <ToggleButton
        android:id="@+id/tb_happiness"
        android:layout_width="40dp"
        android:layout_height="0dp"

        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintTop_toTopOf="@id/tb_anger"
        app:layout_constraintBottom_toBottomOf="@id/tb_anger"
        app:layout_constraintStart_toEndOf="@id/tb_anger"
        app:layout_constraintEnd_toStartOf="@id/tb_boredom"

        android:text=""
        android:textOn=""
        android:textOff=""
        
        android:background="@drawable/selector_happiness_toggle"/>

    <ToggleButton
        android:id="@+id/tb_boredom"
        android:layout_width="40dp"
        android:layout_height="0dp"

        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintTop_toTopOf="@id/tb_anger"
        app:layout_constraintBottom_toBottomOf="@id/tb_anger"
        app:layout_constraintStart_toEndOf="@id/tb_happiness"
        app:layout_constraintEnd_toStartOf="@id/tb_sadness"

        android:text=""
        android:textOn=""
        android:textOff=""

        android:background="@drawable/selector_boredom_toggle"/>

    <ToggleButton
        android:id="@+id/tb_sadness"
        android:layout_width="40dp"
        android:layout_height="0dp"

        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintTop_toTopOf="@id/tb_anger"
        app:layout_constraintBottom_toBottomOf="@id/tb_anger"
        app:layout_constraintStart_toEndOf="@id/tb_boredom"
        app:layout_constraintEnd_toStartOf="@id/tb_anxiety"

        android:text=""
        android:textOn=""
        android:textOff=""

        android:background="@drawable/selector_sadness_toggle"/>

    <ToggleButton
        android:id="@+id/tb_anxiety"
        android:layout_width="40dp"
        android:layout_height="0dp"

        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintTop_toTopOf="@id/tb_anger"
        app:layout_constraintBottom_toBottomOf="@id/tb_anger"
        app:layout_constraintStart_toEndOf="@id/tb_sadness"
        app:layout_constraintEnd_toEndOf="parent"

        android:text=""
        android:textOn=""
        android:textOff=""

        android:background="@drawable/selector_anxiety_toggle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="24dp"

        app:layout_constraintTop_toBottomOf="@id/tb_anger"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/shape_radius_5"
        android:backgroundTint="@color/primary"

        android:text="@string/text_done"
        style="@style/custom_dialog_content_regular_12px"/>

</androidx.constraintlayout.widget.ConstraintLayout>