<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="277dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_10"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"

        android:gravity="center"
        tools:text="다이얼로그 제목"
        style="@style/custom_dialog_title_semi_bold_14px"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"

        style="@style/custom_dialog_content_regular_12px"

        tools:text="다이얼로그 제목" />

    <TextView
        android:id="@+id/tv_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"

        android:gravity="center"
        tools:text="메시지"
        android:textColor="#000000"
        style="@style/custom_dialog_msg_regular_8px"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dialog_1"
        android:layout_width="60dp"
        android:layout_height="26dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_dialog_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_msg"
        android:layout_marginEnd="6dp"
        app:layout_goneMarginEnd="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintHorizontal_chainStyle="packed"

        android:background="@drawable/shape_custom_dialog_btn_bg"
        android:backgroundTint="@color/primary"
        android:stateListAnimator="@null"

        tools:text="확인"
        android:textColor="@color/white"
        style="@style/custom_dialog_content_regular_12px"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dialog_2"
        android:layout_width="60dp"
        android:layout_height="26dp"

        app:layout_constraintStart_toEndOf="@id/btn_dialog_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_msg"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"

        android:background="@drawable/shape_custom_dialog_btn_bg"
        android:stateListAnimator="@null"

        tools:text="취소"
        android:textColor="@color/primary"
        style="@style/custom_dialog_content_regular_12px"/>

</androidx.constraintlayout.widget.ConstraintLayout>