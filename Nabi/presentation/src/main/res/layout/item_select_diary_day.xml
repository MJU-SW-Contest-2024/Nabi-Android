<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_select_diary_day"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_diary_check"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:background="@drawable/img_happiness"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        tools:text="1"
        style="@style/body1"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="@id/iv_diary_check"
        app:layout_constraintEnd_toEndOf="@id/iv_diary_check"
        app:layout_constraintStart_toStartOf="@id/iv_diary_check"
        app:layout_constraintTop_toTopOf="@id/iv_diary_check" />

</androidx.constraintlayout.widget.ConstraintLayout>