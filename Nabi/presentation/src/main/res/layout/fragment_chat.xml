<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray3">
        
        <Toolbar
            android:id="@+id/tb_chat"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentInsetStart="0dp"

            android:background="@color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대화하기"
                style="@style/heading4"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_marginStart="4dp"
                android:src="@drawable/ic_left"
                android:background="@color/transparent"
                android:contentDescription="@null"/>
        </Toolbar>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            
            app:layout_constraintTop_toBottomOf="@id/tb_chat"
            app:layout_constraintBottom_toTopOf="@id/fl_chat_input"

            android:paddingHorizontal="20dp"
            tools:listitem="@layout/item_chat_my"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fl_chat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:elevation="2dp">

            <EditText
                android:id="@+id/et_send_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:maxHeight="80dp"
                
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:paddingStart="14dp"
                android:paddingEnd="52dp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_radius_20"
                android:backgroundTint="@color/gray3"

                android:maxLength="200"
                android:inputType="textMultiLine"
                android:importantForAutofill="no"

                tools:text="안녕하세요\n안녕하세요\n안녕하세요안녕하세요안녕하세요안녕하세요안녕하세요"
                style="@style/chat_send_msg_text_regular_16px"
                android:hint="내용을 입력하세요"
                android:textColor="@color/black"
                android:textColorHint="@color/gray2" />
            
            <ImageButton
                android:id="@+id/ib_send"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="@id/et_send_chat"
                app:layout_constraintTop_toTopOf="@id/et_send_chat"
                app:layout_constraintBottom_toBottomOf="@id/et_send_chat"
                android:layout_marginEnd="14dp"

                android:contentDescription="@null"

                android:src="@drawable/ic_send"
                android:background="@color/transparent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>